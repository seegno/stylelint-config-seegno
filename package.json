{
  "name": "stylelint-config-seegno",
  "version": "0.1.0",
  "description": "Seegno-flavored stylelint config",
  "keywords": [
    "config",
    "react",
    "seegno",
    "styled-components",
    "stylelint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/seegno-labs/stylelint-config-seegno.git"
  },
  "license": "MIT",
  "author": "Seegno",
  "main": "src",
  "scripts": {
    "changelog": "github_changelog_generator --no-issues --header-label='# Changelog' --future-release=v$npm_config_future_release && sed -i '' -e :a -e '$d;N;2,4ba' -e 'P;D' CHANGELOG.md",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test-watch": "jest --watch --notify",
    "version": "npm run changelog --future-release=$npm_package_version && git add -A CHANGELOG.md"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint"
      ],
      "package.json": [
        "sort-package-json",
        "git add"
      ]
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "testRegex": "(test/.*\\.test.js)$"
  },
  "dependencies": {
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^2.1.0",
    "stylelint-processor-styled-components": "^1.6.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "babel-jest": "^24.6.0",
    "babel-plugin-module-resolver": "^3.2.0",
    "eslint": "^5.16.0",
    "eslint-config-seegno": "^13.0.0",
    "jest": "^24.6.0",
    "jest-preset-stylelint": "^1.3.0",
    "lint-staged": "^8.1.5",
    "pre-commit": "^1.2.2",
    "sort-package-json": "^1.22.0",
    "stylelint": "^9.10.1"
  },
  "peerDependencies": {
    "stylelint": "^9.0.0"
  },
  "engines": {
    "node": ">= 8"
  }
}
