{
  "name": "stylelint-config-seegno",
  "version": "0.0.1",
  "description": "Seegno-flavored stylelint config",
  "keywords": [
    "config",
    "react",
    "seegno",
    "styled-components",
    "stylelint"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/seegno-labs/stylelint-config-seegno.git"
  },
  "main": "src",
  "license": "MIT",
  "author": "Seegno",
  "scripts": {
    "changelog": "github_changelog_generator --no-issues --header-label='# Changelog' --future-release=v$npm_config_future_release && sed -i '' -e :a -e '$d;N;2,4ba' -e 'P;D' CHANGELOG.md",
    "lint": "eslint src",
    "lint-staged": "lint-staged",
    "test": "jest",
    "version": "npm run changelog --future-release=$npm_package_version && git add -A CHANGELOG.md"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "jest": {
    "preset": "jest-preset-stylelint"
  },
  "dependencies": {
    "stylelint-config-recommended": "^2.1.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-order": "^2.0.0",
    "stylelint-processor-styled-components": "^1.5.1"
  },
  "devDependencies": {
    "eslint-config-seegno": "^11.0.1",
    "eslint": "^5.9.0",
    "jest": "^23.6.0",
    "jest-preset-stylelint": "^1.3.0",
    "lint-staged": "^8.1.0",
    "pre-commit": "^1.2.2",
    "stylelint": "^9.8.0"
  },
  "peerDependencies": {
    "stylelint": "^9.0.0"
  },
  "engines": {
    "node": ">= 8"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint"
      ]
    }
  }
}
