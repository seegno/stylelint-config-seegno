{
  "name": "stylelint-config-seegno",
  "version": "0.3.0",
  "description": "Seegno-flavored stylelint config",
  "keywords": [
    "config",
    "react",
    "seegno",
    "styled-components",
    "stylelint"
  ],
  "homepage": "https://github.com/seegno/stylelint-config-seegno#readme",
  "bugs": {
    "url": "https://github.com/seegno/stylelint-config-seegno/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/seegno/stylelint-config-seegno.git"
  },
  "license": "MIT",
  "author": "Seegno",
  "main": "src",
  "scripts": {
    "changelog": "github_changelog_generator --no-issues --header-label='# Changelog' --future-release=v$npm_config_future_release && sed -i '/github_changelog_generator/d' CHANGELOG.md",
    "lint": "eslint .",
    "lint-staged": "lint-staged",
    "test": "jest",
    "test-watch": "jest --watch --notify",
    "version": "npm run changelog --future-release=$npm_package_version && git add -A CHANGELOG.md"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "**/*.js": [
      "eslint"
    ],
    "package.json": [
      "sort-package-json",
      "git add"
    ]
  },
  "jest": {
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "html",
      "lcov",
      "text"
    ],
    "testRegex": "(test/.*\\.test.js)$"
  },
  "dependencies": {
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-high-performance-animation": "^1.4.0",
    "stylelint-order": "^3.1.1",
    "stylelint-processor-styled-components": "^1.10.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "babel-jest": "^25.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^5.16.0",
    "eslint-config-seegno": "^15.0.0",
    "jest": "^25.1.0",
    "jest-preset-stylelint": "^1.3.0",
    "lint-staged": "^10.0.8",
    "pre-commit": "^1.2.2",
    "sort-package-json": "^1.40.0",
    "stylelint": "^12.0.1"
  },
  "peerDependencies": {
    "stylelint": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.7.0"
  }
}
